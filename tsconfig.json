{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "strict": true,
    "module": "umd",
    "target": "es5",
    "lib": [
      "ES5"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "allowJs": false,
    "esModuleInterop": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@tests/*": [
        "src/__tests__/*"
      ]
    },
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/*/build"
  ]
}
